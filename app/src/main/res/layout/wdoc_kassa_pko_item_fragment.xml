<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.wolff.wbase.tools.custom_views.EditView

            android:id="@+id/evNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </com.wolff.wbase.tools.custom_views.EditView>

        <com.wolff.wbase.tools.custom_views.EditView

            android:id="@+id/evDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </com.wolff.wbase.tools.custom_views.EditView>

    </LinearLayout>

    <com.wolff.wbase.tools.custom_views.SelectView
        android:id="@+id/svOrganization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.wolff.wbase.tools.custom_views.SelectView>
    <com.wolff.wbase.tools.custom_views.SelectView
        android:id="@+id/svContragentType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.wolff.wbase.tools.custom_views.SelectView>

    <com.wolff.wbase.tools.custom_views.SelectView
        android:id="@+id/svContragent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.wolff.wbase.tools.custom_views.SelectView>
    <com.wolff.wbase.tools.custom_views.SelectView
        android:id="@+id/svCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.wolff.wbase.tools.custom_views.SelectView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.wolff.wbase.tools.custom_views.EditView

            android:id="@+id/evCurrencyCourse"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.wolff.wbase.tools.custom_views.EditView>

        <com.wolff.wbase.tools.custom_views.EditView

            android:id="@+id/evSummaVal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.wolff.wbase.tools.custom_views.EditView>

   </LinearLayout>
    <CheckBox
        android:id="@+id/cbTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CheckBox"/>

</LinearLayout>